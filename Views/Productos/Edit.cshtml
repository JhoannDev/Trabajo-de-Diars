@model Proyecto.Models.Producto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Editar Producto";
}

<h1 class="text-primary fw-bold mb-3">
    <i class="bi bi-pencil-square me-2"></i>Editar Producto
</h1>

<form asp-action="Edit" enctype="multipart/form-data" class="shadow-sm p-4 rounded bg-light">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FotoUrl" />

    <div class="mb-3">
        <label class="form-label fw-semibold">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Tipo de Producto</label>
        <select asp-for="TipoProducto" class="form-select" asp-items="@(new SelectList(ViewBag.TiposProducto))">
            <option value="">-- Selecciona un tipo --</option>
        </select>
        <span asp-validation-for="TipoProducto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label fw-semibold">Precio S/</label>
            <input asp-for="Precio" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label fw-semibold">Stock</label>
            <input asp-for="Stock" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
		<label class="form-label fw-semibold">Cambiar Foto del Producto</label>
		<input type="file" name="foto" class="form-control" accept="image/*" />
    </div>

    @if (!string.IsNullOrEmpty(Model.FotoUrl))
    {
            <div class="mb-3 text-center">
                <img src="@Model.FotoUrl" class="img-thumbnail" style="max-width: 250px;" />
            </div>
    }

    <div class="mt-3">
        <button type="submit" class="btn btn-primary rounded-3">
            <i class="bi bi-save me-1"></i> Guardar Cambios
        </button>
        <a asp-action="Index" class="btn btn-secondary rounded-3 ms-2">
            <i class="bi bi-arrow-left-circle me-1"></i> Volver
        </a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
