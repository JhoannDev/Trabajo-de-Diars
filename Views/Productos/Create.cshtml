@model Proyecto.Models.Producto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Crear Producto";
}

<h1 class="text-primary mb-3">
    <i class="bi bi-plus-circle me-2"></i>Registrar Nuevo Producto
</h1>

<form asp-action="Create" enctype="multipart/form-data" class="shadow-sm p-4 rounded bg-light">
    <div class="mb-3">
        <label class="form-label fw-semibold">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Tipo de Producto</label>
        <select asp-for="TipoProducto" class="form-select" asp-items="@(new SelectList(ViewBag.TiposProducto))">
            <option value="">-- Selecciona un tipo --</option>
        </select>
        <span asp-validation-for="TipoProducto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label fw-semibold">Precio S/</label>
            <input asp-for="Precio" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label fw-semibold">Stock</label>
            <input asp-for="Stock" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Foto del Producto</label>
        <input type="file" name="foto" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-success rounded-3 me-2">
        <i class="bi bi-check-circle me-1"></i> Registrar
    </button>
    <a asp-action="Index" class="btn btn-secondary rounded-3 ms-2">
        <i class="bi bi-arrow-left-circle me-1"></i> Volver
    </a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
