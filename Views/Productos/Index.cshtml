@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Proyecto.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
}

<h1 class="mb-3">Gestión de Productos</h1>

<div class="mb-4">
    <a asp-action="Create" 
       class="btn btn-primary rounded-3 px-4 shadow-sm">
        <i class="fa-solid fa-bowl-food me-2"></i> Crear Producto
    </a>
</div>

<table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-primary">
        <tr>
            <th style="min-width: 190px;">@Html.DisplayNameFor(model => model.Nombre)</th>
            <th style="min-width: 130px;">@Html.DisplayNameFor(model => model.TipoProducto)</th>
            <th style="width: 130px;">Precio</th>
            <th style="width: 90px;">Stock</th>
            <th class="text-center" style="width: 310px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.TipoProducto</td>
                    <td>@($"S/{item.Precio.ToString("F2")}")</td>
                    <td>@item.Stock</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary rounded-3 me-1">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success rounded-3 me-1">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-3">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
        }
    </tbody>
</table>