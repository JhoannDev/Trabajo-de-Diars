@model Proyecto.Models.Producto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Detalles del Producto";
}

<h1 class="mb-4">Detalles del Producto</h1>

<div class="row align-items-start">
    <!-- Imagen del producto -->
    <div class="col-md-4 text-center mb-3">
        @if (!string.IsNullOrEmpty(Model.FotoUrl))
        {
                <img src="@Model.FotoUrl" alt="@Model.Nombre" class="img-fluid shadow rounded" style="max-height: 280px; object-fit: cover;">
        }
        else
        {
                <div class="border rounded p-4 bg-light text-muted">Sin imagen disponible</div>
        }
    </div>

    <!-- Detalles del producto -->
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h4 class="card-title fw-bold text-primary">@Model.Nombre</h4>
                <hr />

                <dl class="row mb-0">
                    <dt class="col-sm-4">Tipo de Producto</dt>
                    <dd class="col-sm-8">@Model.TipoProducto</dd>

                    <dt class="col-sm-4">Descripción</dt>
                    <dd class="col-sm-8">@Model.Descripcion</dd>

                    <dt class="col-sm-4">Precio</dt>
                    <dd class="col-sm-8 text-success fw-semibold">@($"S/. {Model.Precio.ToString("F2")}")</dd>

                    <dt class="col-sm-4">Stock Disponible</dt>
                    <dd class="col-sm-8">@Model.Stock</dd>
                </dl>
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary rounded-pill px-4 me-2">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>
</div>
