@model Proyecto.Models.Producto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Detalles del Producto";
}

<div class="admin-content-container">

    <h1 class="text-primary mb-4">
        <i class="bi bi-eye-fill me-2"></i> Detalles del Producto
    </h1>

    <div class="row g-4">

        <!-- COLUMNA IZQUIERDA (DETALLES) -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 p-4">
                <h4 class="card-title fw-bold text-primary">@Model.Nombre</h4>
                <hr />

                <dl class="row mb-0">
                    <dt class="col-sm-4 fw-bold">Tipo de Producto</dt>
                    <dd class="col-sm-8">@Model.TipoProducto</dd>

                    <dt class="col-sm-4 fw-bold">Descripción</dt>
                    <dd class="col-sm-8">@Model.Descripcion</dd>

                    <dt class="col-sm-4 fw-bold">Precio</dt>
                    <dd class="col-sm-8 text-success fw-semibold">
                        @($"S/. {Model.Precio:F2}")
                    </dd>

                    <dt class="col-sm-4 fw-bold">Stock Disponible</dt>
                    <dd class="col-sm-8">@Model.Stock</dd>
                </dl>
            </div>
        </div>
        <!-- COLUMNA DERECHA (IMAGEN) -->
        <div class="col-lg-4">
            <div class="card shadow-sm p-3 text-center">
                @if (!string.IsNullOrEmpty(Model.FotoUrl))
                {
                    <img src="@Model.FotoUrl"
                         class="img-fluid rounded"
                         style="max-height: 340px; object-fit: contain;" />
                }
                else
                {
                    <div class="border rounded p-4 bg-light text-muted">
                        Sin imagen disponible
                    </div>
                }
            </div>
        </div>
        <!-- BOTONES -->
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary rounded-3 px-4 me-2">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary rounded-3 px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Volver
            </a>
        </div>
    </div>
</div>