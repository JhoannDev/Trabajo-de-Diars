@model Proyecto.Models.Mascota

@{
    ViewData["Title"] = "Detalles de Mascota";
}

<h1 class="text-primary fw-bold mb-4">
    <i class="bi bi-eye-fill me-2"></i>Detalles de la Mascota
</h1>

<div class="row">
    <!-- Información de la mascota -->
    <div class="col-md-7">
        <div class="card shadow-sm p-4 mb-3">
            <h4 class="text-secondary mb-3"><i class="bi bi-info-circle-fill me-2"></i>Información General</h4>
            <dl class="row">
                <dt class="col-sm-4 text-muted">Nombre:</dt>
                <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-4 text-muted">Especie:</dt>
                <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.Especie)</dd>

                <dt class="col-sm-4 text-muted">Raza:</dt>
                <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.Raza)</dd>

                <dt class="col-sm-4 text-muted">Edad:</dt>
                <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.Edad) años</dd>

                <dt class="col-sm-4 text-muted">Estado de Adopción:</dt>
                <dd class="col-sm-8 fw-semibold text-capitalize">@Html.DisplayFor(model => model.EstadoAdopcion)</dd>
            </dl>
        </div>
    </div>

    <!-- Imagen de la mascota -->
    <div class="col-md-5 d-flex justify-content-center align-items-start">
        <div class="card shadow-sm p-3" style="max-width: 320px;">
            @if (!string.IsNullOrEmpty(Model.FotoUrl))
            {
                    <img src="@Model.FotoUrl" alt="Foto de @Model.Nombre"
                         class="img-fluid rounded-3" style="object-fit: cover; width: 100%; height: auto;" />
            }
            else
            {
                    <div class="text-center text-muted py-5">
                        <i class="bi bi-image-alt fs-1"></i>
                        <p class="mt-2">Sin imagen disponible</p>
                    </div>
            }
        </div>
    </div>
</div>

<!-- Botones inferiores -->
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary rounded-3 me-2">
        <i class="bi bi-pencil-square me-1"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary rounded-3">
        <i class="bi bi-arrow-left-circle me-1"></i> Volver a la Lista
    </a>
</div>
