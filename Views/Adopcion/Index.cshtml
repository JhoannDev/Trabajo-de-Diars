@model IEnumerable<Proyecto.Models.Mascota>

@{
    ViewData["Title"] = "Adopta un Amigo";
}
<style>
    .card-img-wrapper {
        position: relative; /* Contenedor para el overlay */
        height: 220px; /* Altura fija que ya tenías */
    }

    .card-img-top {
        height: 100%; /* La imagen llena el wrapper */
        width: 100%;
        object-fit: cover;
    }

    /* Estilo para la tarjeta deshabilitada */
    .card-disabled {
        filter: grayscale(90%); /* Tono gris */
        opacity: 0.8;
    }

    /* El letrero oscuro superpuesto */
    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.55); /* Sombra oscura */
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10;
        text-align: center;
    }

    /* El texto del letrero */
    .overlay-text {
        color: white;
        font-size: 1.5rem;
        font-weight: 600;
        text-transform: uppercase;
        border: 2px solid rgba(255, 255, 255, 0.8);
        border-radius: 5px;
        padding: 0.5rem 1rem;
        background-color: rgba(0, 0, 0, 0.2);
    }
</style>

<div class="container my-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row mb-4 justify-content-center">
        <div class="col-md-8">
            <form asp-controller="Adopcion" asp-action="Index" method="get" class="d-flex">
                <input class="form-control me-2"
                       type="search"
                       placeholder="Buscar por nombre, especie o raza..."
                       name="filtroBusqueda"
                       aria-label="Buscar">
                <button class="btn btn-outline-primary" type="submit">Buscar</button>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">

            @foreach (var mascota in Model)
            {
                bool estaAdoptado = mascota.EstadoAdopcion.ToUpper() == "ADOPTADO";

            <div class="col">
                <div class="card h-100 shadow-sm @(estaAdoptado ? "card-disabled" : "")">

                    <div class="card-img-wrapper">

                            @* Overlay solo si está ADOPTADO *@
                            @if (estaAdoptado)
                            {
                                <div class="card-overlay">
                                    <span class="overlay-text">@mascota.EstadoAdopcion</span>
                                </div>
                            }

                            @if (string.IsNullOrEmpty(mascota.FotoUrl))
                            {
                                <img src="https://via.placeholder.com/400x300.png?text=Foto+Mascota"
                                     class="card-img-top"
                                     alt="Foto no disponible">
                            }
                            else
                            {
                                <img src="@mascota.FotoUrl"
                                     class="card-img-top"
                                     alt="Foto de @mascota.Nombre">
                            }
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@mascota.Nombre</h5>
                        <p class="card-text">
                            <strong>Especie:</strong> @mascota.Especie <br>
                            <strong>Raza:</strong> @mascota.Raza <br>
                            <strong>Edad:</strong> @mascota.Edad años
                        </p>
                    </div>

                    <div class="card-footer bg-white border-top-0 text-center">

                            @* Si NO está adoptado > botón activo *@
                            @if (!estaAdoptado)
                            {
                                <a asp-action="Details"
                                   asp-route-id="@mascota.Id"
                                   class="btn btn-primary w-100">
                                    ¡Conóceme!
                                </a>
                            }
                            else
                            {
                                @* Si está adoptado → deshabilitar *@
                                <span class="btn btn-secondary w-100 disabled" style="opacity: 1;">
                                    @mascota.EstadoAdopcion
                                </span>
                            }
                    </div>
                </div>
            </div>
            }
        </div>
    }
    else
    {
        <div class="text-center alert alert-warning">
            <p>No se encontraron mascotas que coincidan con tu búsqueda.</p>
        </div>
    }
</div>