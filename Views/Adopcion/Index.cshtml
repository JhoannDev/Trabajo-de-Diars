@model IEnumerable<Proyecto.Models.Mascota>

@{
    ViewData["Title"] = "Adopta un Amigo";
}
<style>
    .card-img-wrapper {
        position: relative; /* Contenedor para el overlay */
        height: 220px; /* Altura fija */
    }

    .card-img-top {
        height: 100%; /* La imagen llena el wrapper */
        width: 100%;
        object-fit: cover;
    }

    /* Estilo para la tarjeta deshabilitada */
    .card-disabled {
        filter: grayscale(80%); /* Tono gris */
        opacity: 0.8;
    }

    /* El letrero oscuro superpuesto */
    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.55); /* Sombra oscura */
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10;
        text-align: center;
    }

    /* El texto del letrero */
    .overlay-text {
        color: white;
        font-size: 1.5rem;
        font-weight: 600;
        text-transform: uppercase;
        border: 2px solid rgba(255, 255, 255, 0.8);
        border-radius: 5px;
        padding: 0.5rem 1rem;
        background-color: rgba(0, 0, 0, 0.2);
    }
</style>

<div class="container my-4">

    <!-- TÍTULO con estilo -->
    <div class="d-flex justify-content-center align-items-center mb-4 bg-primary text-white p-3 rounded shadow-sm">
        <h1 class="h3 m-0">@ViewData["Title"]</h1>
    </div>

    <!-- BUSCADOR con estilo -->
    <div class="row mb-4 justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Adopcion" asp-action="Index" method="get" class="input-group">
                <input class="form-control"
                       type="search"
                       placeholder="Buscar por nombre, especie o raza..."
                       name="filtroBusqueda"
                       value="@Context.Request.Query["filtroBusqueda"]">

                <button class="btn btn-dark" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

            @foreach (var mascota in Model)
            {
                bool estaAdoptado = mascota.EstadoAdopcion?.ToUpper() == "ADOPTADO";

                <div class="col">
                    <div class="card h-100 shadow-sm product-card rounded-3 @(estaAdoptado ? "card-disabled" : "")"
                         style="overflow: hidden;">

                        <!-- Imagen -->
                        <div class="card-img-wrapper" style="height: 180px; overflow: hidden;">
                            @if (string.IsNullOrEmpty(mascota.FotoUrl))
                            {
                                <img src="https://via.placeholder.com/300x200.png?text=Mascota"
                                     class="w-100"
                                     style="object-fit: cover;">
                            }
                            else
                            {
                                <img src="@mascota.FotoUrl"
                                     class="w-100"
                                     style="object-fit: cover; height: 100%;">
                            }

                            <!-- Overlay cuando esta adoptado -->
                            @if (estaAdoptado)
                            {
                                <div class="card-overlay">
                                    <span class="overlay-text">@mascota.EstadoAdopcion</span>
                                </div>
                            }
                        </div>

                        <!-- Información -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-center">@mascota.Nombre</h5>

                            <p class="card-text text-muted small text-center">
                                <strong>Especie:</strong> @mascota.Especie <br>
                                <strong>Raza:</strong> @mascota.Raza <br>
                                <strong>Edad:</strong> @mascota.Edad años
                            </p>
                        </div>

                        <!-- Footer con botón conocer mascota -->
                        <div class="card-footer bg-white border-0 text-center">

                            @if (!estaAdoptado)
                            {
                                <a asp-action="Details"
                                   asp-route-id="@mascota.Id"
                                   class="btn btn-primary w-100">
                                    ¡Conóceme!
                                </a>
                            }
                            else
                            {
                                <span class="btn btn-secondary w-100 disabled" style="opacity: 1;">
                                    @mascota.EstadoAdopcion
                                </span>
                            }

                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center alert alert-warning">
            <p>No se encontraron mascotas que coincidan con tu búsqueda.</p>
        </div>
    }
</div>