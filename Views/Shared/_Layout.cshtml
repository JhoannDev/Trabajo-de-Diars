@using Microsoft.AspNetCore.Http
@using Proyecto.Extensions
@using Proyecto.Models

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free@6.6.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">

                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-paw me-2"></i>Proyecto
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link active fw-semibold" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link text-white fw-semibold" asp-controller="Adopcion" asp-action="Index">Adoptar</a></li>
                        <li class="nav-item"><a class="nav-link text-white fw-semibold" asp-controller="Tienda" asp-action="Index">Tienda</a></li>
                        <li class="nav-item"><a class="nav-link text-white fw-semibold" asp-controller="Blog" asp-action="Index">Blog Educativo</a></li>
                        <li class="nav-item"><a class="nav-link text-white fw-semibold" asp-controller="Organizaciones" asp-action="Index">Organizaciones Aliadas</a></li>
                    </ul>

                    <div class="d-flex align-items-center gap-3 mt-3 mt-lg-0">

                        @{
                            var carrito = Context.Session.GetObject<List<CarritoItem>>("Carrito");
                            int cantidad = carrito == null ? 0 : carrito.Sum(c => c.Cantidad);
                        }

                        <a class="text-white text-decoration-none position-relative me-3"
                           asp-controller="Carrito" asp-action="Index"
                           title="Ver mi carrito">
                            <i class="bi bi-cart-fill" style="font-size: 1.5rem;"></i>

                            @if (cantidad > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                      style="font-size: 0.7rem; border: 2px solid #0d6efd;">
                                    @cantidad
                                </span>
                            }

                        </a>

                        @{
                            var userName = Context.Session.GetString("UserName");
                            var userRole = Context.Session.GetString("UserRole");
                        }

                        @if (!string.IsNullOrEmpty(userName))
                        {
                            <div class="text-white text-end border-start ps-3" style="border-color: rgba(255,255,255,0.3) !important;">
                                <div class="fw-bold" style="font-size: 0.9rem; line-height: 1.1;">@userName</div>
                                <div style="font-size: 0.75rem; opacity: 0.8;">@userRole</div>
                            </div>

                            @if (userRole == "Administrador")
                            {
                                <a class="btn btn-light text-primary fw-bold btn-sm" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Panel
                                </a>
                            }
                        }
                        else
                        {
                            <a class="btn btn-success fw-semibold" asp-controller="Login" asp-action="Index">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar sesión
                            </a>
                        }
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 pt-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-auto">
        <div class="container text-center py-3">
            &copy; 2025 - Proyecto - <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>