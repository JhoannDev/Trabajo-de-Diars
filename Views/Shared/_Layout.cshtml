<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <!-- Font Awesome (íconos de animales, huellas, etc.) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free@6.6.0/css/all.min.css" />

</head>
 <body>
   <header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">

            <!-- Logo / nombre del proyecto -->
            <a class="navbar-brand fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">
                Proyecto
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">

                <!-- Menú principal -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item px-2">
                        <a class="nav-link text-white fw-semibold menu-hover" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>

                    <li class="nav-item px-2">
                        <a class="nav-link text-white fw-semibold menu-hover" asp-controller="Adopcion" asp-action="Index">Adoptar</a>
                    </li>

                    <li class="nav-item px-2">
                        <a class="nav-link text-white fw-semibold menu-hover" asp-controller="Tienda" asp-action="Index">Tienda</a>
                    </li>

                    <li class="nav-item px-2">
                        <a class="nav-link text-white fw-semibold menu-hover" asp-controller="Blog" asp-action="Index">Blog Educativo</a>
                    </li>

                    <li class="nav-item px-2">
                        <a class="nav-link text-white fw-semibold menu-hover" asp-controller="Organizaciones" asp-action="Index">Organizaciones Aliadas</a>
                    </li>
                </ul>

                <!-- Sección derecha (usuario y login) -->
                <div class="d-flex align-items-center">

                        @{
                            var userName = Context.Session.GetString("UserName");
                            var userRole = Context.Session.GetString("UserRole");
                        }

                        @if (!string.IsNullOrEmpty(userName))
                        {
                            <!-- Nombre del usuario -->
                            <span class="px-3 py-2 bg-primary text-white rounded-3 me-2 fw-semibold"
                                  style="font-size: 0.95rem; border: 1px solid rgba(255,255,255,0.65);">
                                <i class="bi bi-person-circle me-1"></i>
                                @userName (@userRole)
                            </span>

                            <!-- Dashboard solo Administrador -->
                            @if (userRole == "Administrador")
                            {
                                    <a class="btn btn-success text-white fw-semibold px-3 py-2 rounded-3"
                                       asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-grid-fill me-1"></i> Dashboard
                                    </a>
                            }
                        }
                        else
                        {
                            <!-- Botón Iniciar sesión -->
                            <a class="btn btn-success text-white fw-semibold px-3 py-2 rounded-3"
                               asp-controller="Login" asp-action="Index">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar sesión
                            </a>
                        }
                </div>
            </div>
        </div>
    </nav>
   </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container text-center py-3">
            &copy; 2025 - Proyecto - <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
 </body>
</html>
