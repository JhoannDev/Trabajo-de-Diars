@model Proyecto.Models.Blog

<div class="container blog-container">

    <!-- TÍTULO -->
    <h2 class="blog-title">@Model.Titulo</h2>

    <!-- FECHA Y AUTOR alineado con la imagen -->
    <div class="blog-meta">
        @Model.FechaPublicacion.ToShortDateString() — <b>@Model.Autor</b>
    </div>

    <!-- IMAGEN -->
    @if (!string.IsNullOrEmpty(Model.ImagenUrl))
    {
        <div class="blog-image-wrapper">
            <img src="@Model.ImagenUrl" class="blog-image" alt="@Model.Titulo">
        </div>
    }

    <!-- CONTENIDO -->
    <div class="blog-content">
        @Html.Raw(Model.Contenido)
    </div>

    <!-- BOTÓN VOLVER -->
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-primary px-4">
            ← Volver
        </a>
    </div>

</div>