@model Proyecto.Models.Blog
@using Microsoft.AspNetCore.Http

@{
    var userName = Context.Session.GetString("UserName");
}

<form asp-action="@(ViewContext.RouteData.Values["action"]?.ToString())" method="post">
    <div class="form-group mb-3">
        <label asp-for="Titulo" class="form-label fw-semibold">Título</label>
        <input asp-for="Titulo" class="form-control" placeholder="Escribe el título del blog" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Contenido" class="form-label fw-semibold">Contenido</label>
        <textarea asp-for="Contenido" class="form-control" rows="6" placeholder="Escribe el contenido del blog"></textarea>
        <span asp-validation-for="Contenido" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ImagenUrl" class="form-label fw-semibold">URL de Imagen</label>
        <input asp-for="ImagenUrl" class="form-control" placeholder="https://ejemplo.com/imagen.jpg" />
        <span asp-validation-for="ImagenUrl" class="text-danger"></span>
    </div>

    <!-- Autor oculto -->
    <input type="hidden" asp-for="Autor" value="@Model.Autor ?? userName" />

    <div class="form-check mb-3">
        <input asp-for="Activo" class="form-check-input" />
        <label class="form-check-label" asp-for="Activo">Activo</label>
    </div>

    <button type="submit" class="btn btn-success me-2">
        <i class="bi bi-save"></i> Guardar
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-x-circle"></i> Cancelar
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
