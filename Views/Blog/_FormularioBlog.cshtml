@model Proyecto.Models.Blog
@using Microsoft.AspNetCore.Http

<div class="form-bottom-space">
    <form asp-action="@(ViewContext.RouteData.Values["action"]?.ToString())" method="post">

        <div class="form-group mb-3">
            <label asp-for="Titulo" class="form-label fw-semibold">Título</label>
            <input asp-for="Titulo" class="form-control" placeholder="Escribe el título del blog" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="FechaPublicacion" class="form-label fw-semibold">Fecha de Publicación</label>
            <input asp-for="FechaPublicacion" type="date" class="form-control" />
            <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
        </div>

        <!-- Autor -->
        <div class="form-group mb-3">
            <label asp-for="Autor" class="form-label fw-semibold">Autor</label>
            <input asp-for="Autor" class="form-control" placeholder="Nombre del autor" />
            <span asp-validation-for="Autor" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Contenido" class="form-label fw-semibold">Contenido</label>
            <textarea asp-for="Contenido" class="form-control" rows="6" placeholder="Escribe el contenido del blog"></textarea>
            <span asp-validation-for="Contenido" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ImagenUrl" class="form-label fw-semibold">URL de Imagen</label>
            <input asp-for="ImagenUrl" class="form-control" placeholder="https://ejemplo.com/imagen.jpg" />
            <span asp-validation-for="ImagenUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success me-2">
            <i class="bi bi-save"></i> Guardar
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancelar
        </a>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
