@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h4 class="text-center mb-3"><i class="bi bi-envelope"></i> Recuperar contraseña</h4>

                    @if (ViewBag.Error != null)
                    {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    @if (ViewBag.Message != null)
                    {
                            <div class="alert alert-success">@ViewBag.Message</div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Correo electrónico</label>
                            <input type="email" name="email" class="form-control" required placeholder="Tu correo registrado" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100 text-white fw-semibold">Enviar enlace de recuperación</button>
                        <div class="text-center mt-3">
                            <a asp-action="Index" class="btn btn-danger text-white fw-semibold">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
