@model IEnumerable<Proyecto.Models.Producto>

@{
    ViewData["Title"] = "Tienda de Productos";
}

<div class="container my-4">
    <div class="d-flex justify-content-center align-items-center mb-4 bg-primary text-white p-3 rounded shadow-sm">
        <h1 class="h3 m-0">@ViewData["Title"]</h1>
    </div>

    <div class="row mb-4 justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Tienda" asp-action="Index" method="get" class="input-group">
                <input class="form-control" type="search" placeholder="Buscar producto..." name="filtroBusqueda">
                <button class="btn btn-dark" type="submit"><i class="bi bi-search"></i></button>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm product-card">

                        <a asp-action="Details" asp-route-id="@producto.Id" class="text-decoration-none">
                            <img src="@(string.IsNullOrEmpty(producto.FotoUrl) ? "/images/placeholder.jpg" : producto.FotoUrl)"
                                 class="card-img-top p-3"
                                 alt="@producto.Nombre"
                                 style="height: 220px; object-fit: contain;">
                        </a>

                        <div class="card-body d-flex flex-column text-center">
                            <small class="text-muted text-uppercase mb-1">Producto</small>

                            <h6 class="card-title fw-bold text-dark mb-2" style="min-height: 40px;">
                                <a asp-action="Details" asp-route-id="@producto.Id" class="text-decoration-none text-dark">
                                    @producto.Nombre
                                </a>
                            </h6>

                            <p class="card-text text-muted small mb-3">
                                @if (!string.IsNullOrEmpty(producto.Descripcion) && producto.Descripcion.Length > 45)
                                {
                                    @producto.Descripcion.Substring(0, 45)
                        
                                    <text>...</text>
                                }
                                else
                                {
                                    @producto.Descripcion
                                }
                            </p>

                            <div class="mt-auto">
                                <h4 class="fw-bold text-primary mb-3">S/ @producto.Precio.ToString("0.00")</h4>

                                <a asp-action="Details" asp-route-id="@producto.Id" class="btn btn-primary w-100 rounded-pill fw-bold">
                                    Comprar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            No se encontraron productos.
        </div>
    }
</div>