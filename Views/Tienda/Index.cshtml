@model IEnumerable<Proyecto.Models.Producto>

@{
    ViewData["Title"] = "Tienda de Productos y Accesorios";
}

<div class="container my-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row mb-4 justify-content-center">
        <div class="col-md-8">
            <form asp-controller="Tienda" asp-action="Index" method="get" class="d-flex">
                <input class="form-control me-2"
                       type="search"
                       placeholder="Buscar por nombre o descripción..."
                       name="filtroBusqueda"
                       aria-label="Buscar">
                <button class="btn btn-outline-primary" type="submit">Buscar</button>
            </form>
        </div>
    </div>
    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">

            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (string.IsNullOrEmpty(producto.FotoUrl))
                        {
                            <img src="https://via.placeholder.com/400x300.png?text=Foto+Producto"
                                 class="card-img-top"
                                 alt="Foto no disponible"
                                 style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="@producto.FotoUrl"
                                 class="card-img-top"
                                 alt="Foto de @producto.Nombre"
                                 style="height: 250px; object-fit: cover;">
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@producto.Nombre</h5>
                            <p class="card-text">
                                @producto.Descripcion
                            </p>
                        </div>

                        <div class="card-footer bg-white border-top-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold fs-4 text-success">
                                    S/ @producto.Precio.ToString("0.00")
                                </span>
                                <a href="#" class="btn btn-primary">
                                    <i class="bi bi-cart-plus"></i> Agregar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center alert alert-warning">
            <p>No se encontraron productos que coincidan con tu búsqueda.</p>
        </div>
    }
</div>