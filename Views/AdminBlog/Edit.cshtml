@model Proyecto.Models.Blog
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Editar el Blog";
}

<div class="container my-4">

    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-pencil-square me-2"></i> Editar Blog
    </h2>

    <div class="card shadow-sm p-4">

        <form asp-action="Edit" enctype="multipart/form-data">

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label fw-semibold">Título</label>
                <input asp-for="Titulo" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Fecha</label>
                <input asp-for="FechaPublicacion" type="date" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Autor</label>
                <input asp-for="Autor" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Contenido</label>
                <textarea asp-for="Contenido" class="form-control" rows="6"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Imagen (URL)</label>
                <input asp-for="ImagenUrl" class="form-control" />
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary rounded-3 px-4 me-2">
                    <i class="bi bi-save me-1"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary rounded-3 px-4 me-2">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver
                </a>
            </div>

        </form>
    </div>
</div>