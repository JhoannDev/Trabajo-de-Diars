@model Proyecto.Models.Blog
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Detalles del Blog";
}

<div class="container my-4">

    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-eye-fill me-2"></i> Detalles del Blog
    </h2>

    <div class="row g-4">

        <!-- COLUMNA IZQUIERDA -->
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <h4 class="fw-semibold mb-4 text-secondary">
                    <i class="bi bi-info-circle me-2"></i> Información General
                </h4>

                <dl class="row mb-0">
                    <dt class="col-sm-3 fw-bold">Título:</dt>
                    <dd class="col-sm-9">@Model.Titulo</dd>

                    <dt class="col-sm-3 fw-bold">Fecha:</dt>
                    <dd class="col-sm-9">@Model.FechaPublicacion.ToShortDateString()</dd>

                    <dt class="col-sm-3 fw-bold">Autor:</dt>
                    <dd class="col-sm-9">@Model.Autor</dd>

                    <dt class="col-sm-3 fw-bold">Contenido:</dt>
                    <dd class="col-sm-9">@Model.Contenido</dd>
                </dl>
            </div>
        </div>

        <!-- COLUMNA DERECHA (IMAGEN) -->
        <div class="col-md-4">
            <div class="card shadow-sm p-3 text-center">
                @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                {
                    <img src="@Model.ImagenUrl"
                         class="img-fluid rounded"
                         style="max-height: 330px; object-fit: cover;" />
                }
                else
                {
                    <img src="/images/placeholder.jpg"
                         class="img-fluid rounded"
                         style="max-height: 330px; object-fit: cover;" />
                }
            </div>
        </div>
    </div>

    <!-- BOTONES -->
    <div class="mt-4 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 rounded-3">
            <i class="bi bi-pencil-square me-1"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary px-4 rounded-3">
            <i class="bi bi-arrow-left me-1"></i> Volver a la Lista
        </a>
    </div>
</div>