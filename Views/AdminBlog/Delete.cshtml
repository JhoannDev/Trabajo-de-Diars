@model Proyecto.Models.Blog
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Eliminar Blog";
}

<div class="container my-4">

    <h2 class="fw-bold text-danger mb-4">
        <i class="bi bi-trash-fill me-2"></i> Eliminar Blog
    </h2>

    <div class="row">

        <!-- Imagen del Blog -->
        <div class="col-md-4">
            <div class="card shadow-sm p-2">
                <img src="@(string.IsNullOrEmpty(Model.ImagenUrl)
                            ? "/images/placeholder.jpg"
                            : Model.ImagenUrl)"
                     class="img-fluid rounded"
                     alt="Imagen del blog">
            </div>
        </div>

        <!-- Información del Blog -->
        <div class="col-md-8">

            <div class="card shadow-sm p-4">
                <h4 class="fw-semibold text-dark mb-4">
                    ¿Estás seguro de que deseas eliminar este Blog?
                </h4>

                <dl class="row mb-4">
                    <dt class="col-sm-3 fw-bold">Título:</dt>
                    <dd class="col-sm-9">@Model.Titulo</dd>

                    <dt class="col-sm-3 fw-bold">Autor:</dt>
                    <dd class="col-sm-9">@Model.Autor</dd>

                    <dt class="col-sm-3 fw-bold">Fecha:</dt>
                    <dd class="col-sm-9">@Model.FechaPublicacion.ToShortDateString()</dd>

                    <dt class="col-sm-3 fw-bold">Contenido:</dt>
                    <dd class="col-sm-9 text-muted" style="white-space: pre-line;">
                        @Model.Contenido
                    </dd>
                </dl>

                <form asp-action="DeleteConfirmed">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger px-4 rounded-3">
                            <i class="bi bi-trash-fill me-1"></i> Eliminar
                        </button>

                        <a asp-action="Index" class="btn btn-secondary px-4 rounded-3">
                            <i class="bi bi-arrow-left-circle me-1"></i> Volver
                        </a>
                    </div>

                </form>
            </div>

        </div>

    </div>
</div>