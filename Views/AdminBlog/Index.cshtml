@model IEnumerable<Proyecto.Models.Blog>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Gestión del Blog";
}
<h1 class="mb-3">Gestión de Blogs:</h1>
<div class="container my-4">

    <div class="mb-4">
        <a asp-action="Create"
           class="btn btn-primary rounded-3 px-4 shadow-sm">
            <i class="bi bi-journal-text me-2"></i> Crear Nuevo Blog
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            No hay entradas registradas aún.
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover shadow-sm align-middle">
            <thead class="bg-primary text-white">
                <tr>
                    <th style="width: 40%;">Título</th>
                    <th style="width: 14%;">Fecha</th>
                    <th style="width: 18%;">Autor</th>
                    <th style="width: 28%;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Titulo</td>

                        <td>@item.FechaPublicacion.ToShortDateString()</td>

                        <td>@item.Autor</td>

                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-primary btn-sm rounded-3 mb-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-success btn-sm rounded-3 mb-1">
                                <i class="bi bi-eye-fill"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-danger btn-sm rounded-3">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>